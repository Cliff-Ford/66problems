package problem16;


/**
 * @author Cliff_Ford
 * 输入两个单调递增的链表，输出两个链表合成后的链表，
 * 当然我们需要合成后的链表满足单调不减规则。
 */
public class Solution {
	public ListNode Merge(ListNode list1,ListNode list2) {
		if(list1 == null) {
			return list2;
		}
		if(list2 == null) {
			return list1;
		}
		ListNode h = null;
        ListNode p = null;
        ListNode q = null;
        if(list1.val <= list2.val) {
        	p = list1;
        	q = list2;
        	h = p;
        	p = p.next;
        }else {
        	p = list2;
        	q = list1;
        	h = p;
        	p = p.next;
        }
        //返回链的最后一个节点
        ListNode c = h;
        while(p != null && q != null) {
        	if(p.val < q.val) {
        		c.next = p;
        		p = p.next;
        	}
        	if(p.val >= q.val) {
        		c.next = q;
        		q = q.next;
        	}
        }
        if(q == null) {
        	c.next = p;
        }
        if(p == null) {
        	c.next = q;
        }
        return h;
    }
}