package problem15;


/**
 * @author Cliff_Ford
 * 输入一个链表，反转链表后，输出新链表的表头。
 */
public class Solution {
	public ListNode ReverseList(ListNode head) {
		ListNode p,t,h;
		p = head;
		t = head.next;
		h = p;
		//至少两个节点
		while(t != null) {
			//说明t是最后一个节点，即新的头节点
			if(t.next == null) {
				h = t;
			}
			else {
				h = t.next;
			}
			t.next = p;
			p = h;
			h = t;
			t = p.next;
			
		}
		return h;
    }
	public void Reverse(ListNode head) {
		if(head.next != null) {
			Reverse(head.next);
		}
		System.out.println(head.val);
	}
}